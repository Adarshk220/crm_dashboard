<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="crm.CrmDashboard">
        <div class="">
            <div>
                <center>
                    <h1 style="margin:20px;">
                        CRM Dashboard
                    </h1>
                </center>
            </div>
            <div class="stat_content" style="
                                  text-align: centre;
                                  padding-top: 20px; padding-left: 1100px;">
                <select class="form-select col-8" id="timeInterval" style="background: grey;"
                        t-on-change="(ev) => this._fetch_data(ev.target.value)">
                    <option value="year">This Year</option>
                    <option value="quarter">Quarter</option>
                    <option value="month">Month</option>
                    <option value="week">Week</option>
                </select>
            </div>
            <div class="row main-section" style="margin-left: 10px;">
                <!--            Lead Tile-->
                <div id="leads" class="col-md-4 col-sm-6 tot_tasks oh-payslip" t-on-click="_OnClickLeads"
                     style=" overflow: hidden; padding-top: 30px;">
                    <div class="oh-card" style="box-shadow:2px 4px 8px 2px rgba(0,0,0.3,0.2);
                display: flex; justify-content: center;" role="button">
                        <div class="oh-card-body"
                             style="padding: 5px 5px; float: left; width: 100%;
                          height: auto; box-sizing: border-box; margin: 0;">
                            <div class="stat-widget-one">
                                <div class="stat-icon bg-mauve-light d-flex justify-content-left align-items-left">
                                    <div style="background:#ff4d94; width:65px; text-align: center;">
                                        <i class="fa fa-tasks text-mauve"
                                           style="font-size:50px;"/>
                                    </div>
                                    <div class="stat_content" style="
                                  text-align: center; font-weight: bold;
                                  padding-top: 20px; padding-left: 80px;">
                                        <div class="stat_count_lead"
                                             style="font-size: 17px;">
                                            <span id="templates">
                                                <div id="my_lead"/>
                                            </span>
                                        </div>
                                        <div class="stat-head"
                                             style="font-size: 14px;">Leads
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--       Opportunity Tile-->
                <div id="opportunity" class="col-md-4 col-sm-6 tot_tasks oh-payslip" t-on-click="_OnClickOpportunities"
                     style=" overflow: hidden; padding-top: 30px;">
                    <div class="oh-card" style="box-shadow:2px 4px 8px 2px rgba(0,0,0.3,0.2);
                display: flex; justify-content: center;" role="button">
                        <div class="oh-card-body"
                             style="padding: 5px 5px; float: left; width: 100%;
                          height: auto; box-sizing: border-box; margin: 0;">
                            <div class="stat-widget-one">
                                <div class="stat-icon bg-mauve-light d-flex justify-content-left align-items-left">
                                    <div style="background:yellow; width:65px; text-align: center;">
                                        <i class="fa fa-trophy  text-mauve"
                                           style="font-size:50px;"/>
                                    </div>
                                    <div class="stat-content" style="
                                  text-align: center; font-weight: bold;
                                  padding-top: 20px; padding-left: 80px;">
                                        <div class="stat_count_opp"
                                             style="font-size: 17px;">
                                            <span id="templates">
                                                <div id="my_opportunity"/>
                                            </span>
                                        </div>
                                        <div class="stat-head"
                                             style="font-size: 14px;">Opportunity
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--            Expected Revenue -->
                <div id="expected_revenue_card" t-on-click="_OnClickExpectedRevenue"
                     class="col-md-4 col-sm-6 tot_tasks oh-payslip"
                     style=" overflow: hidden; padding-top: 30px;">
                    <div class="oh-card" style="box-shadow:2px 4px 8px 2px rgba(0,0,0.3,0.2);
                display: flex; justify-content: center;" role="button">
                        <div class="oh-card-body"
                             style="padding: 5px 5px; float: left; width: 100%;
                          height: auto; box-sizing: border-box; margin: 0;">
                            <div class="stat-widget-one">
                                <div class="stat-icon bg-mauve-light d-flex justify-content-left align-items-left">
                                    <div style="background:#bf80ff;; width:65px; text-align: center;">
                                        <i class="fa fa-usd  text-mauve"
                                           style="font-size:50px;"/>
                                    </div>
                                    <div class="stat-content" style="
                                  text-align: center; font-weight: bold;
                                  padding-top: 20px; padding-left: 80px;">
                                        <div class="stat_count_ex_rev"
                                             style="font-size: 17px;">
                                            <span id="templates">
                                                <div id="expected_revenue"/>
                                            </span>
                                        </div>
                                        <div class="stat-head"
                                             style="font-size: 14px;">Expected
                                            revenue
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--       Revenue Tile-->
                <div id="revenue_card" class="col-md-4 col-sm-6 tot_tasks oh-payslip"
                     t-on-click="_OnClickRevenue" style=" overflow: hidden; padding-top: 30px;">
                    <div class="oh-card" style="box-shadow:2px 4px 8px 2px rgba(0,0,0.3,0.2);
                display: flex; justify-content: center;" role="button">
                        <div class="oh-card-body"
                             style="padding: 5px 5px; float: left; width: 100%;
                          height: auto; box-sizing: border-box; margin: 0;">
                            <div class="stat-widget-one">
                                <div class="stat-icon bg-mauve-light d-flex justify-content-left align-items-left">
                                    <div style="background:green; width:65px; text-align: center;">
                                        <i class="fa fa-bank"
                                           style="font-size:50px;"/>
                                    </div>
                                    <div class="stat-content" style="
                                  text-align: center; font-weight: bold;
                                  padding-top: 20px; padding-left: 80px;">
                                        <div class="stat_count_opp"
                                             style="font-size: 17px;">
                                            <span id="templates">
                                                <div id="revenue"/>
                                            </span>
                                        </div>
                                        <div class="stat-head"
                                             style="font-size: 14px;">Revenue
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--       Win Ratio Tile-->
                <div id="win_card" class="col-md-4 col-sm-6 tot_tasks oh-payslip"
                     t-on-click="_OnClickWin" style=" overflow: hidden; padding-top: 30px;">
                    <div class="oh-card" style="box-shadow:2px 4px 8px 2px rgba(0,0,0.3,0.2);
                display: flex; justify-content: center;" role="button">
                        <div class="oh-card-body"
                             style="padding: 5px 5px; float: left; width: 100%;
                          height: auto; box-sizing: border-box; margin: 0;">
                            <div class="stat-widget-one">
                                <div class="stat-icon bg-mauve-light d-flex justify-content-left align-items-left">
                                    <div style="background:lightblue; width:65px; text-align: center;">
                                        <i class="fa fa-balance-scale"
                                           style="font-size:50px;"/>
                                    </div>
                                    <div class="stat-content" style="
                                  text-align: center; font-weight: bold;
                                  padding-top: 20px; padding-left: 80px;">
                                        <div class="stat_count_opp"
                                             style="font-size: 17px;">
                                            <span id="templates">
                                                <div id="win_ratio"/>
                                            </span>
                                        </div>
                                        <div class="stat-head"
                                             style="font-size: 14px;">Win Ratio
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6 m-0 " style=" padding-top: 70px;">
                        <div class="shadow-sm border m-2 p-4 bg-white">
                            <div class="d-flex align-items-center justify-content-between">
                                <h3 class="text-primary fw-bold">Lost Lead</h3>
                            </div>
                            <canvas t-ref="lost_lead"/>
                        </div>
                    </div>
                    <div class="col-lg-6 m-0 " style=" padding-top: 70px;">
                        <div class="shadow-sm border m-2 p-4 bg-white">
                            <div class="d-flex align-items-center justify-content-between">
                                <h3 class="text-primary fw-bold">Lead-Campaign</h3>
                            </div>
                            <canvas t-ref="lead_campaign"/>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6 m-0 " style=" padding-top: 70px;">
                        <div class="shadow-sm border m-2 p-4 bg-white">
                            <div class="d-flex align-items-center justify-content-between">
                                <h3 class="text-primary fw-bold">Lead-Medium</h3>
                            </div>
                            <canvas t-ref="lead_medium"/>
                        </div>
                    </div>
                     <div class="col-lg-6 m-0 " style=" padding-top: 70px;">
                        <div class="shadow-sm border m-2 p-4 bg-white">
                            <div class="d-flex align-items-center justify-content-between">
                                <h3 class="text-primary fw-bold">Lead-Activity</h3>
                            </div>
                            <canvas t-ref="lead_activity"/>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6 m-0 " style=" padding-top: 70px;">
                        <div class="shadow-sm border m-2 p-4 bg-white">
                            <table border="5" background="brown">
                                <tr>
                                    <th>Leads</th>
                                    <th>Company Name</th>
                                    <th>Salesperson</th>
                                    <th>Sales Team</th>
                                    <th>Email</th>
                                </tr>
                                <tr>
                                    <!--                            <tr t-foreach="" t-as="row" align="center">-->
                                    <td>Row 1, Column 1</td>
                                    <td>Row 1, Column 2</td>
                                    <td>Row 1, Column 3</td>
                                    <td>Row 1, Column 4</td>
                                    <td>Row 1, Column 5</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>